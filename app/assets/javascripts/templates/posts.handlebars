<div class="row-fluid">
  <div class="span6">
    <a {{action createPost href=true}}>New Post</a>
    <ul class="nav nav-tabs nav-stacked" id='posts'>
      {{#each content}}
        <tr>
          <li>
          <a {{action showPost this href=true}}>{{title}}</a>
          <a {{action delete this}}>Delete</a>
          </li>
        </tr>
      {{/each}}
    </ul>
  </div>
  <div class="span6">
    {{outlet}}
  </div>
</div>
