<div class='six columns'>
  {{#linkTo posts.new class='button'}}New Post{{/linkTo}}
  <ul class='posts'>
    {{#each controller}}
      {{#unless isNew}}
        <li>
          <div class="radius panel post">
            {{#linkTo post this}}<img {{bindAttr src="imageUrl"}}/>{{/linkTo}}
            <a {{action openModal this controllers.reveal}} class="zoom-post secondary tiny button">Zoom</a>
            <a {{action deletePost this}} class="delete-post tiny button">Delete</a>
          <div>
        </li>
      {{/unless}}
    {{/each}}
  </ul>
</div>
<div class="six columns">
  {{outlet}}
</div>
