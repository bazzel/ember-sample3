{{#if controllers.post.isLoaded}}
  {{#view App.AlertBoxView isPublishedBinding="controllers.post.published"}}
    This post is {{#unless controllers.post.published}}not{{/unless}} published.
  {{/view}}

  <h4>{{controllers.post.title}}</h4>
  <p class="truncate">{{controllers.post.body}}</p>
{{else}}
  <p>Loading</p>
{{/if}}

{{#linkTo post.edit class='secondary button'}}Edit{{/linkTo}}
<a {{action deletePost controllers.post.content}} class="alert button">Delete</a>

<dl class="tabs pill">
  {{#linkTo comments tagName='dd'}}
    <a {{bindAttr href="view.href"}}>Comments ({{controllers.post.comments.length}})</a>
  {{/linkTo}}
  {{#linkTo trackbacks tagName='dd'}}
    <a {{bindAttr href="view.href"}}>Trackbacks ({{controllers.post.trackbacks.length}})</a>
  {{/linkTo}}
</dl>
{{outlet}}
