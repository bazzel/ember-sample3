<form {{action savePost content on="submit"}}>
  <label for="post_title" class="control-label">Title</label>
  {{view Em.TextField valueBinding="title" id="post_title" placeholder="Title"}}

  <label for="post_body" class="control-label">Body</label>
  {{view Em.TextArea valueBinding="body" id="post_body" class="Body"}}

  <label>
    {{view Ember.Checkbox checkedBinding="published"}} Published
  </label>

  <label for="post_category" class="control-label">Category</label>
  {{view Em.TextField valueBinding="picture_number" type="number"}}
  {{view Em.Select
      contentBinding="categories"
      selectionBinding="category"
      optionValuePath="content.id"
      optionLabelPath="content.name"}}

  <button type="submit" class="button">Save</button>
  {{#unless isNew}}
    <button {{action deletePost content}} class="alert button">Delete</button>
  {{/unless}}
  <a {{action cancelPost content}} class="secondary button">Cancel</a>
</form>

